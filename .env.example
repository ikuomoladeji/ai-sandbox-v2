# Ollama VPS Configuration
# REQUIRED: Configure your VPS Ollama endpoint
# Replace with your actual VPS IP address or domain
OLLAMA_URL=http://YOUR_VPS_IP:11434/api/generate

# Available models: llama3.2:3b, llama3.2:1b, llama3.2:latest, llama3:latest, mistral:latest
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=120

# Risk Scoring Thresholds
RISK_THRESHOLD_LOW=4.0
RISK_THRESHOLD_MEDIUM=3.0

# Output Configuration
DEFAULT_OUTPUT_FORMAT=excel
DEFAULT_AUDIENCE=internal

# Logging Configuration
LOG_LEVEL=INFO

